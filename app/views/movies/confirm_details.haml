.container
  .row
    .col-sm-12.col-md-6
      = image_tag("#{@details['Poster']}")
    .col-sm-12.col-md-6
      %h3= @details['Title']
      %h4= @details['Year']
      %h4= @details['Genre']

      .row
        .col-sm-12
          %p Is this the movie you were looking for?
      .row
        .col-sm-12
          = link_to 'YES!', select_movie_movies_path(params: { details: @details }), class: 'btn btn-primary'
          = link_to 'No, search again.', new_movie_path, class: 'btn btn-primary'
