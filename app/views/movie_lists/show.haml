#notice= notice
.movie-list.movie-list-show
  .row
    .col-sm-12.col-md-6
      .card
        .card-header
          %strong Title:
          = @movie_list.title
        .card-body
          .row
            .col-sm-12
              %strong Description:
              = @movie_list.description if @movie_list.description.present?
          .row
            .col-sm-12
              = link_to 'Edit', edit_movie_list_path(@movie_list)
              |
              = link_to 'Back', movie_lists_path

    - if @movie_list.movies.count.positive?
      .col-sm-12.col-md-6
        .card
          .card-header
            Movies in this list
          .card-body
            -@movie_list.movies.each do |movie|
              %p= link_to movie.title, movie_path(movie)
